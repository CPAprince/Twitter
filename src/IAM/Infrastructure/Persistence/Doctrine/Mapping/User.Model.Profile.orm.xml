<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="
                    http://doctrine-project.org/schemas/orm/doctrine-mapping
                    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Twitter\IAM\Domain\User\Model\Profile" table="profiles">

        <id name="user" association-key="true"/>

        <one-to-one field="user" target-entity="Twitter\IAM\Domain\User\Model\User">
            <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

        <field name="name" type="string" length="50" nullable="false"/>
        <field name="bio" type="string" length="300" nullable="true"/>
        <field name="updatedAt" type="datetime_immutable" nullable="true"/>

    </entity>

</doctrine-mapping>
